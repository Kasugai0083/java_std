	private boolean flag = false;
	
	@RequestMapping("/")
	public ModelAndView index(ModelAndView mav) {
		flag = !flag;
		mav.setViewName("index");
		mav.addObject("flag",flag);
		mav.addObject("msg", "サンプルのメッセージです。");
		return mav;
	}
	
	
}
